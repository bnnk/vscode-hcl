{
	"name": "hcl",
    "version": "0.1.",
    "publisher": "wholroyd",
    "author": {
        "name": "William Holroyd"
    },
	"license": "MIT",
	"icon": "icon.png",
	"description": "HashiCorp Configuration Language support for Visual Studio Code",
	"displayName": "HCL",
    "repository": {
        "type": "git",
        "url": "https://github.com/wholroyd/vscode-hcl.git"
    },
	"bugs": {
		"url": "https://github.com/wholroyd/vscode-hcl/issues"
	},
	"categories": [
		"Programming Languages",
		"Snippets",
		"Linters"
	],
	"engines": {
		"vscode": "0.10.x"
	},
	"contributes": {
		"languages": [{
			"id": "hcl",
			"aliases": ["HCL", "hcl"],
			"extensions": [".tf",".tfvars",".nomad", ".hcl", "Appfile"],
            "configuration": "./hcl.configuration.json"
		}],
		"grammars": [{
			"language": "hcl",
			"scopeName": "source.hcl",
			"path": "./syntaxes/hcl2.json"
		}]
	}
}